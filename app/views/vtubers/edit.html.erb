<div class="container col-12 col-lg-6">
  <h2>Edit VTuber</h2>
  <%= simple_form_for(@vtuber) do |f| %>
    <%= f.input :name %>
    <%= f.association :agency, collection: @agencies %>
    <%= f.input :gender, collection: ["female", "male"] %>
    <%= f.input :birthday, discard_year: true, discard_time: true %>
    <%= f.input :debut_date %>
    <%= f.input :description, as: :text %>
    <%= f.input :main_language %>
    <%= f.input :yt_channel, label: "YouTube channel" %>
    <%= f.input :twitch_channel %>
    <%= f.input :photo_url %>
    <%= f.input :active, as: :boolean %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>


    <%#= f.input :photos, as: :file, input_html: { multiple: true } %>
    <div class="form-actions">
      <%= f.button :submit, class:"btn btn-info my-3" %>
    </div>
  <% end %>

</div>
