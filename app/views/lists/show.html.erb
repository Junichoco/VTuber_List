<div class="container col-12 col-lg-6" data-controller="delete-button">
  <div class="list-show-header">
    <h2><%= @list.name %></h2>
    <div class="list-show-delete">
      <%= link_to "Delete this list",
        list_path(@list),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" },
        class: "main-button"
        %>
        <a class="main-button noselect" data-action="click->delete-button#trigger">Remove a VTuber</a>
      </div>
  </div>
  <div>
    <p>Made by <%= @list.user.username %></p>
  <div class="list-cards">
    <% if @list.get_vtubers.empty? %>
      <p>There are no VTubers in this list</p>
    <% else %>
      <%= render "shared/list_display", list: @list %>
    <% end %>
  </div>
</div>
