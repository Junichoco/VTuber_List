<div class="container col-6">
  <h1><%= @list.name %></h1>
  <%= link_to "Go back", :back %>
  <div class="list-cards">
    <% @list.vtuber_markers.each do |marker| %>
      <%# link_to vtuber_path do %>
        <div class="card-category">
          <div class="card-category-body">
            <p><%= link_to marker.vtuber.name, vtuber_path(marker.vtuber) %></p>
          </div>
          <% if marker.vtuber.photo_url %>
            <div>
              <%= image_tag marker.vtuber.photo_url, class: "list-card-image" %>
            </div>
          <% end %>
          <div class="card-category-footer">
          <%= link_to marker.vtuber.yt_channel do %>
            <i class="fa-brands fa-youtube" style="color: #ff0000;"></i>
          <% end %>
          </div>
        </div>
      <% end %>
    <%# end %>
</div>

<div class="container col-4">
</div>
<div class="container form col-4">
  <h2>Add VTuber</h2>
  <%#simple_form_for [@list] do |f| %>
    <%#= f.association :vtuber %>
    <%# <div class="form-actions"> %>
    <%#= f.button :submit %>
    <%# </div> %>
  <%# end %>
</div>
