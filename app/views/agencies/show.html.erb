<div class="container col-6">
  <h2><%= @agency.name %></h2>
  <p><%= @agency.description %></p>
  <p><%= @agency.country %></p>
  <%# number of vtubers: %>
  <%= link_to "Website", @agency.website, target: :blank %>
  <%= link_to @agency.yt_channel, target: :blank do %>
    <h4><i class="fa-brands fa-youtube" style="color: #ff0000;"></i></h4>
  <% end %>


    <% if !@agency.active %>
      <p><%= @agency.name %> is not active.</p>
    <% end %>
</div>
