<div class="page-container">
  <div class="list-show-container">
    <div class="search-header">
      <h2>Tags</h2>
    </div>
    <div class="grid">
      <% @tags.each do |tag| %>
        <p><span class="tag-button"><%= link_to tag.name, tag_path(tag) %></span> (<%= tag.vtuber_count %>)</p>
      <% end %>
    </div>
  </div>
</div>
