<div class="page-container">
  <div class="list-show-container">
    <% if !(user_signed_in? && current_user.role == "admin") %>
      <%= render "shared/unauthorized" %>
    <% else %>
      <div class="create-tag" style="margin-bottom: 12px;">
        <h2 style="margin-bottom: 10px;">Create Tag</h2>
        <%= simple_form_for(@tag) do |f| %>
          <%= f.input :name %>
          <div class="form-actions">
            <%= f.button :submit, class:"btn-create" %>
          </div>
        <% end %>
      </div>
      <div class="search-header">
        <h2>Delete Tags</h2>
      </div>
      <div class="grid">
        <% @tags.each do |tag| %>
          <div>
            <p><span class="tag-button"><%= tag.name %></span>

              <%= link_to tag_path(tag),
                data: { turbo_method: :delete, turbo_confirm: "Delete this tag?" } do %>
                  <span style="font-size: 1.5rem; margin: 0;"><i class="fa-solid fa-square-xmark delete-icon"></i></span>
              <% end %>
            </p>
          </div>

        <% end %>
      </div>
    <% end %>
  </div>
</div>
